<h1>My Portfolio </h1>


<h3>Search Stocks </h3>

<div id="stock-lookup" class ="row">
    <%= form_tag "search_stocks",remote: true, method: :get, id:"stock_lookup_form" do%>
        <div class="form-group no-padding row col-md-12">
            <div class="col-md-10">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock search here", 
                class: "form-control search-box input-lg" ,autofocus: true%> 
            
            </div>

            <div class="col-md-2">
                <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
                <i class="fa fa-search"></i> Look up stock
                
                <% end %>
                 
            
            </div>


        </div>
    <% end %>
</div>

<div id='results'>
    <%= render 'users/result' %>
</div>